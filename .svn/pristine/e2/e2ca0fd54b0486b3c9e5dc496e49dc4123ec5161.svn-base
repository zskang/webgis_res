<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cabletech.res.mapper.publicmgr.BTSSiteMapper">
	<select id="getbyid" resultType="com.cabletech.res.entity.publicmgr.BTSSiteEntity"
		parameterType="string" flushCache="true">
		select btssite_id btssiteid,site_id
		siteid,room_id roomid,irms_id irmsid,ne_name nename,cn_name
		cnname,btssite_code btssitecode,
		bsc,transfer_type
		transfertype,band,bs_level bslevel,device_model
		devicemodel,state,to_char(opening_time,'yyyy-MM-dd HH24:mi:ss')
		openingtime
		from res_btssite where
		btssite_id=#{btssiteid,jdbcType=VARCHAR} and (
		state is null or state
		!= '9' )
	</select>

	<update id="update" parameterType="com.cabletech.res.entity.publicmgr.BTSSiteEntity">
		UPDATE res_btssite SET
		site_id=#{siteid,jdbcType=VARCHAR},room_id=#{roomid,jdbcType=VARCHAR},irms_id=#{irmsid,jdbcType=VARCHAR},
		ne_name=#{nename,jdbcType=VARCHAR},cn_name=#{cnname,jdbcType=VARCHAR},btssite_code=#{btssitecode,jdbcType=VARCHAR},
		bsc=#{bsc,jdbcType=VARCHAR},transfer_type=#{transfertype,jdbcType=VARCHAR},band=#{band,jdbcType=VARCHAR},
		bs_level=#{bslevel,jdbcType=VARCHAR},device_model=#{devicemodel,jdbcType=VARCHAR},opening_time=to_date(#{openingtime,jdbcType=VARCHAR},'yyyy-MM-dd
		HH24:mi:ss')
		WHERE btssite_id=#{btssiteid,jdbcType=VARCHAR}
	</update>

	<insert id="save" parameterType="com.cabletech.res.entity.publicmgr.BTSSiteEntity"
		flushCache="true">
		insert into
		res_btssite(btssite_id,site_id,room_id,irms_id,ne_name,cn_name,btssite_code,bsc,transfer_type,band,bs_level,device_model,
		opening_time)
		values(#{btssiteid,jdbcType=VARCHAR}
		,#{siteid,jdbcType=VARCHAR},#{roomid,jdbcType=VARCHAR}
		,#{irmsid,jdbcType=VARCHAR},#{nename,jdbcType=VARCHAR},#{cnname,jdbcType=VARCHAR}
		,#{btssitecode,jdbcType=VARCHAR},#{bsc,jdbcType=VARCHAR},#{transfertype,jdbcType=VARCHAR},#{band,jdbcType=VARCHAR}
		,#{bslevel,jdbcType=VARCHAR},#{devicemodel,jdbcType=VARCHAR}
		,to_date(#{openingtime,jdbcType=VARCHAR},'yyyy-MM-dd HH24:mi:ss'))
	</insert>
	<select id="queryBTSSiteList" parameterType="hashmap"
		resultType="hashmap" flushCache="true">
		select d.zdbh,d.zymc
		zdmc,n.ne_name,n.cn_name,n.bs_level,fn_getnamebycode(n.bs_level,'BS_LEVEL')
		bs_levelname,n.room_id,j.zymc jfmc,d.regionid,
		g.regionname,
		to_char(n.opening_time,'yyyy-MM-dd hh24:mi:ss')
		openingtime,n.btssite_id,o.NAME orgname,p.NAME patrolgroupname
		from
		res_btssite n left join res_zdxx d on
		n.site_id = d.xtbh
		left join
		res_jf j on n.room_id = j.xtbh
		left join res_maintenance m on
		d.xtbh=m.rs_id and m.rs_type='C31'
		left join view_org o on
		m.maintenance_id=o.ID
		left join view_patrolgroup p on
		p.ID=m.patrol_group_id
		left join
		view_region g on d.regionid =g.regionid
		where 1=1 and
		(n.state!='9' or
		n.state is
		null)
		<if test="roomid != null and roomid != ''">
			and j.zymc like '%' ||#{roomid,jdbcType=VARCHAR} ||
			'%'
		</if>
		<if test="bslevel != null and bslevel != ''">
			and n.bs_level = #{bslevel,jdbcType=VARCHAR}
		</if>
		<if test="nename != null and nename != ''">
			and n.ne_name like '%' || #{nename,jdbcType=VARCHAR} ||
			'%'
		</if>
		<if test="cnname != null and cnname != ''">
			and n.cn_name like '%' || #{cnname,jdbcType=VARCHAR} ||
			'%'
		</if>
		<if test="zdbh != null and zdbh != ''">
			and d.zdbh like '%' || #{zdbh,jdbcType=VARCHAR} || '%'
		</if>
		<if test="regionids != null">
			and d.regionid in
			<foreach collection="regionids" item="regionid" open="("
				separator="," close=")">
				#{regionid,jdbcType=VARCHAR}
			</foreach>
		</if>
		<if test="orgids != null">
			and m.maintenance_id in
			<foreach collection="orgids" item="orgid" open="(" separator=","
				close=")">
				#{orgid,jdbcType=VARCHAR}
			</foreach>
			and m.rs_id=n.site_id and m.rs_type='C31'
		</if>
		<if test="patrolgroupid != null and patrolgroupid != ''">
			and m.patrol_group_id =
			#{patrolgroupid,jdbcType=VARCHAR} 
		</if>
	</select>
	<update id="delete" parameterType="String">
		UPDATE res_btssite SET
		state='9'
		where BTSSITE_ID=#{btssiteid,jdbcType=VARCHAR}
	</update>

</mapper>